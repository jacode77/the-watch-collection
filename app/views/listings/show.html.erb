<section class="container d-flex flex-column flex-md-row px-2 my-2 my-md-5">
    <div class="content col-12 col-md-7 col-lg-8 p-0 pr-md-3">
        <div class="col-12 p-0 main-preview mb-4">
            <%if @listing.picture.attached?%>
                <%=image_tag @listing.picture, alt: @brand.name, class: "thumbnail card-img-top"%>
            <%else%>
                <%=image_tag "patek.jpg", alt: @brand.name, class: "thumbnail card-img-top"%>
            <%end%>
        </div>
    </div>
    <div class="sidebar col-lg-4 p-0 mx-2 d-md-block"> 
        <h1 class="mb-sm-2 mb-md-5"><%=@brand.name%></h1>
        <h4 class="text-muted">Model: <%=@listing.model%></h4>
        <h4 class="text-muted">Condition: <%=@listing.condition%></h4>
        <h4 class="text-muted">Movement: <%=@listing.movement%></h4>
        <h4 class="text-muted">Case: <%=@listing.case_details%></h4>
        <h4 class="text-muted">Strap: <%=@listing.strap%></h4>
        <h4 class="text-muted">Year of purchase: <%=@listing.year%></h4>
        <h4 class="text-muted">Authenticity: <%=@listing.authenticity%></h4>
        <h4 class="text-muted">Description: <%=@listing.description%></h4>
        <h4 class="text-muted">Price: <%=format_pricing(@listing.price)%></h4>
    <div class="container">
        <%if current_user && current_user.id == @listing.user_id%>
            <div class="d-flex justify-content-equally">
                <%= link_to "Edit", edit_listing_path(@listing.id), class: "btn btn-warning mr-2"%>
                <%= link_to "Delete", @listing, method: :delete, data: {confirm: "Are you sure you want to delete this listing?"}, class: "btn btn-danger mr-2"%>
            </div>
        <%end%>
    </div>
    
    </div>
    
</section>