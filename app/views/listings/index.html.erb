<%# Heading not styled - all styling to be updated (WIP) %>
<h1 class="hero-title text-center">Listings</h1>
<section class="container">
    <div class="row row-cols-sm-1 row-cols-mg-2 row-cols-lg-4">
        <%@listings.each do |item|%>
            <div class="col mb-4">
                <div class="card border-dark h-100">
                    <%if item.picture.attached?%>
                        <%=image_tag item.picture, alt: @brands.name, class: "thumbnail card-img-top"%>
                    <%else%>
                        <%=image_tag "patek.jpg", alt: @brands.name, class: "thumbnail card-img-top"%>
                    <%end%>
                    <div class="card-body">
                        <h5><%=item.brand_id%></h5> <%# Somehow need to list the actual brand name rather than the ID number %>
                        <p class="card-text text-secondary"><%=item.model%></p>
                        <div class="d-flex fustify-content-between">
                            <%=link_to "See More", listing_path(item.id), class:"btn btn-outline-primary"%>
                            <h5><%=format_pricing(item.price)%></h5>
                        </div>
                    </div>
                </div>
            <div>
        <%end%>
    </div>
</section>