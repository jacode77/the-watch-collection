<%=form_with model: @listing, local: true do |f|%>
  
  <div class='form-group mb-3'> 
    <%=f.label :brand_id, class: "form-label"%>
    <%=f.text_field :brand_id%>
  </div>
  
  <div class='form-group mb-3'> 
    <%=f.label :model, class: "form-label"%>
    <%=f.text_field :model%>
  </div>

   <div class='form-group mb-3'> 
    <%=f.label :condition, class: "form-label"%>
    <%=f.text_area :condition, class: "form-control"%>
  </div>

  <div class='form-group mb-3'> 
    <%=f.label :movement, class: "form-label"%>
    <%=f.text_area :movement, class: "form-control"%>
  </div>

  <div class='form-group mb-3'> 
    <%=f.label :case_details, class: "form-label"%>
    <%=f.text_area :case_details, class: "form-control"%>
  </div>

  <div class='form-group mb-3'> 
    <%=f.label :strap, class: "form-label"%>
    <%=f.text_area :strap, class: "form-control"%>
  </div>

  <div class='form-group mb-3'> 
    <%=f.label :year, class: "form-label"%>
    <%=f.text_area :year, class: "form-control"%>
  </div>

<%# Insert authenticity verified checkbox part of form here %> 

  <div class='form-group mb-3'> 
    <%=f.label :category_id, class: "form-label"%>
    <%=f.select :category_id, @categories.map {|c| [c.name, c.id]}, class: "form-select"%>
  </div>

   <div class='form-group mb-3'> 
    <%=f.label :description, class: "form-label"%>
    <%=f.text_area :description, class: "form-control"%>
  </div>

    <div class='form-group mb-3'> 
    <%=f.label :price, class: "form-label"%>
    <%=f.number_field :price%>
  </div>

<div class='actions'> 
   <%=f.submit%>
  </div>
<%end%>