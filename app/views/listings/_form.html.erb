
 <%# delcare form object for create form %>
<%= simple_form_for @listing do |f|%>
  <%= f.select :brand_id, @brands.map {|b| [b.name, b.id]}%>
  <%= f.input :model %>
  <%= f.input :condition %>
  <%= f.input :movement %>
  <%= f.input :case_details %>
  <%= f.input :strap %>
  <%= f.input :year %>
  <%= f.input :authenticity, as: :radio_buttons, collection: [['0', 'false'], ['1', 'true']], label_method: :second, value_method: :first %>
  
  <%= f.collection_check_boxes :listings_categories, @categories, :id, :name do |b| %>
    <%= b.label class: "form-check-label"%>
    <%= b.check_box class: "form-check-line mr-2" %>
  <%end%>

  <%# <%= f.input :categories, collection: @categories.map {|c| [c.name, c.id]}, as: :check_boxes %>
  <%# <%=f.select :categories, @categories.map {|c| [c.name, c.id]}, as: :check_boxes, class: "form-select" %> 
  <%# <%= f.select(:categories, options_from_collection_for_select(Category.all, :categories, :name)) %>
  <%= f.input :picture, accept: "image/png, image/jpg, image/jpeg"%>

  <%= f.input :description%>
  <%= f.input :price%>
  <%= f.submit class: "btn btn-secondary"%>
<%end %>

