<%# <%=form_with model: @listing, local: true do |f|%> 
<%= simple_form_for @listing do |f|%>
    <%= f.error_notification %>

    <%# <%= f.input :brand_id%> 
   
   <%# Provides brand as a dropdown menu - provides better control %>


    <%# <%= f.label :brand_id, class: "form-label"
    <%= f.select :brand_id, @brands.map {|b| b.name}%> 
    <%# # <%= f.input :brand_id, collection: @brands.string, as: :grouped_select, group_method: :name  %>
    <div class='form-group mb-3'> 
        <%=f.label :brand_id, class: "form-label"%>
        <%=f.select :brand_id, @brands.map {|b| [b.name, b.id]}, class: "form-select"%>
    </div>
   
    <%= f.input :model %>

    <%= f.input :condition %>

    <%= f.input :movement %>

    <%= f.input :case_details %>

    <%= f.input :strap %>

    <%= f.input :year %>

    <%# <%= f.input :authenticity, as: :radio_buttons %>
       <%# <%= simple_form_for @user do |f| %>
    <%= f.input :authenticity, as: :radio_buttons, collection: [['0', 'false'], ['1', 'true']], label_method: :second, value_method: :first %>
    <%# <% end %>

  <div class='form-group mb-3'> 
    <%=f.label :category_id, class: "form-label"%>
    <%=f.select :category_id, @categories.map {|c| [c.name, c.id]}, class: "form-select"%>
  </div>

  <div class='form-group mb-3'> 
    <%=f.label :picture, class: "form-label"%>
    <%=f.file_field :picture, accept: "image/png, image/jpg, image/jpeg"%>
  </div>

   <div class='form-group mb-3'> 
    <%=f.label :description, class: "form-label"%>
    <%=f.text_area :description, class: "form-control"%>
  </div>

    <div class='form-group mb-3'> 
    <%=f.label :price, class: "form-label"%>
    <%=f.number_field :price%>
  </div>

<div class='actions'> 
   <%=f.submit%>
  </div>
<%end %>